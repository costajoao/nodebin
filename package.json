{
  "name": "@costajoao/nodebin",
  "version": "0.4.5",
  "description": "A clone of PostBin (https://www.postb.in/) in Node.js",
  "main": "src/index.js",
  "scripts": {
    "dev": "bun run --watch src/index & bun run lint:watch",
    "prod": "bun dist/index.js",
    "build": "bun run clean && bun run build:code",
    "build:code": "bun build --minify --sourcemap --target=bun --outdir=dist src/index.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rm -rf dist",
    "lint": "oxlint ./src --fix --deny=correctness --tsconfig=tsconfig.json --ignore-path=../.gitignore",
    "lint:watch": "bunx onchange \"src/**/*.ts\" -- bun run lint"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.3",
    "body-parser": "^2.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "edn-data": "^1.1.2",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "js-yaml": "^4.1.0",
    "mime-db": "^1.54.0",
    "mime-types": "^3.0.1",
    "multer": "^2.0.1",
    "nanoid": "^5.1.5",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.3",
    "@types/js-yaml": "^4.0.9",
    "@types/multer": "^1.4.13",
    "@types/node": "^24.0.4",
    "@types/xml2js": "^0.4.14",
    "bun": "^1.2.17",
    "oxlint": "^1.3.0",
    "prettier": "3.6.2"
  },
  "private": true,
  "peerDependencies": {
    "typescript": "^5"
  }
}